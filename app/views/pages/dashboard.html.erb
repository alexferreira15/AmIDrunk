<div class="container d-flex align-items-center justify-content-between my-3 px-4">

  <div>
    <%= cl_image_tag current_user.photo.key, width: 65, height: 65, crop: :thumb, gravity: :face, class: "dashboard-user-pic me-4" %>
  </div>

  <div class="dashboard-greeting">
    <h1>Hi, <%= current_user.username %>!</h1>
    <p>You already had "sum of todays tab"</p>
  </div>

</div>

<div class="container my-3 px-4">

  <div class="container status-display">

    <div class="row">
      <div class="col-12">
        <h2>0.2% of alcohool</h2>
      </div>

    </div>

    <div class="row">

      <div class="col-12">
        <p>Still Good to drive</p>
      </div>

    </div>
  </div>

</div>

<div class= "textinside" data-controller="drinks">
  <div class='container example-two'>
    <header class='example-two-header'>
      <span class='logo'>BarTab</span>
      <nav class='vertical-align-middle scroll'>
        <span class='nav-item' data-action="click->drinks#printBeers">Beers</span>
        <span class='nav-item' data-action="click->drinks#printCyders">Cyders</span>
        <span class='nav-item' data-action="click->drinks#printWines">Wines</span>
        <span class='nav-item' data-action="click->drinks#printSpirits">Spirits</span>
        <span class='nav-item' data-action="click->drinks#printCocktails">Cocktails</span>
        <span class='nav-item' data-action="click->drinks#printShots">Shots</span>

      </nav>
    </header>
  </div>

  <div data-drinks-target="bartab drinks" class="d-none">
      <%= render 'bar-tab-cards', drinks: @tab_drinks %>
  </div>

  <div data-drinks-target="beers drinks" class="d-none">
      <%= render 'drink-card', drinks: @beers %>
  </div>

  <div data-drinks-target="cyders drinks" class="d-none">
      <%= render 'drink-card', drinks: @cyders %>
  </div>

  <div data-drinks-target="wines drinks" class="d-none">
      <%= render 'drink-card', drinks: @wines %>
  </div>

  <div data-drinks-target="spirtis drinks" class="d-none">
      <%= render 'drink-card', drinks: @spirits %>
  </div>

  <div data-drinks-target="cocktails drinks" class="d-none">
      <%= render 'drink-card', drinks: @cocktails %>
  </div>

  <div data-drinks-target="shots drinks" class="d-none">
      <%= render 'drink-card', drinks: @shots %>
  </div>
</div>
