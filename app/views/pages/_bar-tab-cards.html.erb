<% @grouped_drinks.each do |drink, tab_drinks| %>
  <div class= 'card-drinks'>
    <div class= "img-drinks">
      <%= cl_image_tag drink.photo.key, crop: :fill %>
    </div>
    <div class= "drink-details">
      <div id= "drink-name">
        <p> <%= drink.name %> </p>
      </div>
      <div id= "alcohol-percentage">
        <p> <%= drink.alcohol %> % </p>
      </div>
      <div id= "alcohol-percentage">
        <p> Counter: <%= tab_drinks.count %> </p>
      </div>
    </div>
    <div id= "btn-add-drink">
      <%= render "add-form", drink: drink, tab_drink: @tab_drink, placeholder: "+", id: "add-drink-text" %>
    </div>
  </div>
<% end %>
